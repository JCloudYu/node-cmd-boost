#!/bin/bash

function STDERR { cat - 1>&2; }


NODE=$(which node);
if [ "$NODE" == "" ]; then
	echo "node cannot be found!" | STDERR;
	exit 1;
fi

RPATH=$(which rpath);
if [ "$RPATH" == "" ]; then
	echo "rpath cannot be found!" | STDERR;
	exit 1;
fi


LIB_DIR=$(dirname $(dirname $($RPATH $0)))/lib
$NODE --experimental-worker --experimental-modules --loader "${LIB_DIR}/esm-js.loader.mjs" "$@"
